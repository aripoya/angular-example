rsApp = angular.module('rsApp', ['ngResource', 'rails', 'ui', 'ui.bootstrap'])


rsApp.filter "nameWithTitle", ->
  (user) ->
    if user.married
      title = 'Missis'
    else
      title = 'Miss'
    "#{title} #{user.name}"



rsApp.controller "MainCtrl", ["$scope", "$location", ($scope, $location) ->

  $scope.users = []

  $scope.addUser = (user) ->
     $scope.users.push( $.extend({}, user) )

]



rsApp.config ["$locationProvider", "$routeProvider", ($locationProvider, $routeProvider) ->
  $locationProvider.html5Mode(true).hashPrefix('!')
  $routeProvider.when("/",
    templateUrl: "<%= asset_path 'templates/home.html' %>"
  ).otherwise redirectTo: "/"
]




